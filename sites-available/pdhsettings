server {
    listen   80; 

    server_name  www.linandg.com linandg.com;
 
    location =/ {
        proxy_pass  http://blog.thepaydayhound.com;
    }

    location /tools {
	rewrite ^/tools(.*)$ $host$1;
  	proxy_pass  http://devpup.herokuapp.com;
    }

    location /infos {
	proxy_pass  http://devpup.herokuapp.com;
    }

    location /assets {
        proxy_pass  http://devpup.herokuapp.com;
    }
}
